<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:FoodbookApp"
             xmlns:converters="clr-namespace:Foodbook.Converters"
             x:Class="FoodbookApp.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Converters -->
            <converters:InvertedBoolConverter x:Key="InvertedBoolConverter" />
            <converters:StringIsNotNullOrEmptyConverter x:Key="StringIsNotNullOrEmptyConverter" />
            
            <!-- Font Settings - Dynamic Resources for runtime font changes -->
            <!-- These will be set by FontService -->
            <x:String x:Key="AppFontFamily">Default</x:String>
            <x:Double x:Key="AppFontSize">16</x:Double>
            <x:Double x:Key="AppSmallFontSize">14</x:Double>
            <x:Double x:Key="AppLargeFontSize">20</x:Double>
            <x:Double x:Key="AppTitleFontSize">24</x:Double>
            
        </ResourceDictionary>
    </Application.Resources>
</Application>
