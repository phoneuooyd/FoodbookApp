<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="FoodbookApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:Foodbook.Views"
    xmlns:loc="clr-namespace:Foodbook.Services"
    Title="FoodbookApp"
    BackgroundColor="{DynamicResource ShellBackgroundColor}"
    ForegroundColor="{DynamicResource PrimaryText}"
    TabBarForegroundColor="{DynamicResource TabBarForeground}"
    TabBarBackgroundColor="{DynamicResource TabBarBackground}"
    TabBarTitleColor="{DynamicResource TabBarTitle}"
    TabBarDisabledColor="{StaticResource Gray300}"
    TabBarUnselectedColor="{DynamicResource TabBarUnselected}"
    TitleColor="{DynamicResource ShellTitleColor}"
    Shell.TabBarIsVisible="False"
    Shell.NavBarIsVisible="False"
    FlyoutBehavior="Disabled">

    <!-- Main content is now MainPage with custom TabBarComponent -->
    <ShellContent
        Route="Main"
        ContentTemplate="{DataTemplate views:MainPage}" />

    <!-- Additional routes for navigation (no TabBar items) -->
    <ShellContent
        Route="AddRecipePage"
        ContentTemplate="{DataTemplate views:AddRecipePage}" />
    <ShellContent
        Route="IngredientFormPage"
        ContentTemplate="{DataTemplate views:IngredientFormPage}" />
    <ShellContent
        Route="MealFormPage"
        ContentTemplate="{DataTemplate views:MealFormPage}" />
    <ShellContent
        Route="ShoppingListDetailPage"
        ContentTemplate="{DataTemplate views:ShoppingListDetailPage}" />
    <ShellContent
        Route="SettingsPage"
        ContentTemplate="{DataTemplate views:SettingsPage}" />
    <ShellContent
        Route="PlannerPage"
        ContentTemplate="{DataTemplate views:PlannerPage}" />
    <ShellContent
        Route="ArchivePage"
        ContentTemplate="{DataTemplate views:ArchivePage}" />
    <ShellContent
        Route="DataArchivizationPage"
        ContentTemplate="{DataTemplate views:DataArchivizationPage}" />
</Shell>
