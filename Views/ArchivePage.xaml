<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:Foodbook.Models"
             xmlns:vm="clr-namespace:Foodbook.ViewModels"
             xmlns:resx="clr-namespace:FoodbookApp.Resources"
             x:Class="Foodbook.Views.ArchivePage"
             x:Name="ThisPage"
             x:DataType="vm:ArchiveViewModel"
             Title="{x:Static resx:ArchivePage.Title}">
    <CollectionView ItemsSource="{Binding ArchivedPlans}" Margin="10" SelectionMode="None">
        <CollectionView.EmptyView>
            <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
                <Label Text="{x:Static resx:ArchivePage.NoArchived}"
                       FontSize="16"
                       HorizontalTextAlignment="Center"
                       TextColor="Gray" />
            </StackLayout>
        </CollectionView.EmptyView>
        <CollectionView.ItemTemplate>
            <DataTemplate x:DataType="models:Plan">
                <Border Stroke="LightGray" StrokeThickness="1" Padding="10" Margin="5" BackgroundColor="LightGray">
                    <Grid ColumnDefinitions="*,Auto,Auto" ColumnSpacing="10">
                        <!-- Kolumna z trescia planu -->
                        <VerticalStackLayout Grid.Column="0">
                            <Label Text="{Binding Label}" 
                                   FontAttributes="Bold" 
                                   FontSize="18" 
                                   VerticalOptions="Center"
                                   TextColor="DarkGray" />
                            <Label FontSize="14" TextColor="Gray" Margin="0,2,0,0">
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span Text="{x:Static resx:ArchivePage.From}" />
                                        <Span Text="{Binding StartDate, StringFormat=' {0:dd.MM.yyyy}'}" />
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>
                            <Label FontSize="14" TextColor="Gray">
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span Text="{x:Static resx:ArchivePage.To}" />
                                        <Span Text="{Binding EndDate, StringFormat=' {0:dd.MM.yyyy}'}" />
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>
                        </VerticalStackLayout>
                        
                        <!-- Przycisk przywracania - strzalka -->
                        <Button Grid.Column="1" 
                                Text="↩️" 
                                Command="{Binding BindingContext.RestorePlanCommand, Source={x:Reference ThisPage}}" 
                                CommandParameter="{Binding .}" 
                                WidthRequest="40" 
                                HeightRequest="40"
                                BackgroundColor="Green"
                                TextColor="White"
                                FontSize="16"
                                CornerRadius="6" />
                        
                        <!-- Przycisk trwalego usuwania - kosz -->
                        <Button Grid.Column="2" 
                                Text="🗑" 
                                Command="{Binding BindingContext.DeletePlanCommand, Source={x:Reference ThisPage}}" 
                                CommandParameter="{Binding .}" 
                                WidthRequest="40" 
                                HeightRequest="40"
                                BackgroundColor="Red"
                                TextColor="White"
                                FontSize="16"
                                CornerRadius="6" />
                    </Grid>
                </Border>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>