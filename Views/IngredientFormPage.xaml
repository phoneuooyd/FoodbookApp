<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Foodbook.ViewModels"
             xmlns:converters="clr-namespace:Foodbook.Converters"
             xmlns:resx="clr-namespace:FoodbookApp.Resources"
             x:Class="Foodbook.Views.IngredientFormPage"
             x:Name="ThisPage"
             x:DataType="vm:IngredientFormViewModel"
             Title="{Binding Title}">
    <ContentPage.Resources>
        <converters:StringToBoolConverter x:Key="StringToBoolConverter" />
        <converters:InvertedBoolConverter x:Key="InvertedBoolConverter" />
    </ContentPage.Resources>
    
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            
            <!-- Header -->
            <Label Text="{Binding Title}" 
                   FontSize="24" 
                   FontAttributes="Bold" 
                   HorizontalOptions="Center"
                   Margin="0,0,0,10" />
            
            <!-- Basic Information Section -->
            <Label Text="{x:Static resx:IngredientFormPage.BasicInfo}"
                   FontSize="18"
                   FontAttributes="Bold"
                   Margin="0,10,0,5" />
            
            <!-- Name Field -->
            <StackLayout Spacing="5">
                <Label Text="{x:Static resx:IngredientFormPage.NameLabel}" FontAttributes="Bold" />
                <Entry Placeholder="{x:Static resx:IngredientFormPage.NamePlaceholder}"
                       Text="{Binding Name}"
                       ClearButtonVisibility="WhileEditing" />
            </StackLayout>
            
            <!-- Quantity and Unit in Grid -->
            <Grid ColumnDefinitions="2*,*" ColumnSpacing="10">
                <!-- Quantity Field -->
                <StackLayout Grid.Column="0" Spacing="5">
                    <Label Text="{x:Static resx:IngredientFormPage.QuantityLabel}" FontAttributes="Bold" />
                    <Entry Placeholder="{x:Static resx:IngredientFormPage.QuantityPlaceholder}"
                           Keyboard="Numeric" 
                           Text="{Binding Quantity}"
                           ClearButtonVisibility="WhileEditing"
                           HorizontalTextAlignment="Center" />
                </StackLayout>
                
                <!-- Unit Field -->
                <StackLayout Grid.Column="1" Spacing="5">
                    <Label Text="{x:Static resx:IngredientFormPage.UnitLabel}" FontAttributes="Bold" />
                    <Picker Title="{x:Static resx:IngredientFormPage.UnitLabel}"
                            ItemsSource="{Binding Units}" 
                            SelectedItem="{Binding SelectedUnit}" />
                </StackLayout>
            </Grid>
            
            <!-- Nutritional Information Section -->
            <Label Text="{x:Static resx:IngredientFormPage.NutritionHeader}"
                   FontSize="18"
                   FontAttributes="Bold"
                   Margin="0,20,0,5" />

            <!-- OpenFoodFacts Verification Section -->
            <StackLayout Spacing="10">
                <Grid ColumnDefinitions="*,Auto" ColumnSpacing="10">
                    <Label Grid.Column="0"
                           Text="{x:Static resx:IngredientFormPage.VerifyLabel}"
                           FontSize="14"
                           FontAttributes="Bold"
                           VerticalOptions="Center" />
                    <Button Grid.Column="1"
                            Text="{x:Static resx:IngredientFormPage.VerifyButton}"
                            Command="{Binding VerifyNutritionCommand}"
                            BackgroundColor="{DynamicResource Primary}"
                            TextColor="White"
                            FontSize="12"
                            HeightRequest="35"
                            CornerRadius="6"
                            IsEnabled="{Binding IsVerifying, Converter={StaticResource InvertedBoolConverter}}" />
                </Grid>
                
                <!-- Verification Status -->
                <Label Text="{Binding VerificationStatus}" 
                       FontSize="12" 
                       HorizontalTextAlignment="Center"
                       IsVisible="{Binding VerificationStatus, Converter={StaticResource StringToBoolConverter}}"
                       Margin="0,5,0,10" />
            </StackLayout>
            
            <!-- Nutritional Values Grid -->
            <Grid ColumnDefinitions="*,*" ColumnSpacing="10" RowDefinitions="Auto,Auto" RowSpacing="10">
                <!-- Calories Field -->
                <StackLayout Grid.Row="0" Grid.Column="0" Spacing="5">
                    <Label Text="{x:Static resx:IngredientFormPage.Calories}" FontAttributes="Bold" />
                    <Entry Placeholder="0.0" 
                           Keyboard="Numeric" 
                           Text="{Binding Calories}"
                           ClearButtonVisibility="WhileEditing"
                           HorizontalTextAlignment="Center" />
                </StackLayout>
                
                <!-- Protein Field -->
                <StackLayout Grid.Row="0" Grid.Column="1" Spacing="5">
                    <Label Text="{x:Static resx:IngredientFormPage.Protein}" FontAttributes="Bold" />
                    <Entry Placeholder="0.0" 
                           Keyboard="Numeric" 
                           Text="{Binding Protein}"
                           ClearButtonVisibility="WhileEditing"
                           HorizontalTextAlignment="Center" />
                </StackLayout>
                
                <!-- Fat Field -->
                <StackLayout Grid.Row="1" Grid.Column="0" Spacing="5">
                    <Label Text="{x:Static resx:IngredientFormPage.Fat}" FontAttributes="Bold" />
                    <Entry Placeholder="0.0" 
                           Keyboard="Numeric" 
                           Text="{Binding Fat}"
                           ClearButtonVisibility="WhileEditing"
                           HorizontalTextAlignment="Center" />
                </StackLayout>
                
                <!-- Carbs Field -->
                <StackLayout Grid.Row="1" Grid.Column="1" Spacing="5">
                    <Label Text="{x:Static resx:IngredientFormPage.Carbs}" FontAttributes="Bold" />
                    <Entry Placeholder="0.0" 
                           Keyboard="Numeric" 
                           Text="{Binding Carbs}"
                           ClearButtonVisibility="WhileEditing"
                           HorizontalTextAlignment="Center" />
                </StackLayout>
            </Grid>
            
            <!-- Recipe Info (if applicable) -->
            <StackLayout Spacing="5" IsVisible="{Binding IsPartOfRecipe}" Margin="0,15,0,0">
                <Label Text="Informacja" 
                       FontSize="14" 
                       FontAttributes="Bold" />
                <Frame BackgroundColor="LightBlue" 
                       Padding="10" 
                       CornerRadius="6">
                    <Label Text="{Binding RecipeInfo}" 
                           FontSize="12"
                           HorizontalTextAlignment="Center" />
                </Frame>
            </StackLayout>
            
            <!-- Action Buttons -->
            <StackLayout Spacing="10" Margin="0,20,0,0">
                <Button Text="{Binding SaveButtonText}"
                        Command="{Binding SaveCommand}"
                        HeightRequest="50"
                        FontSize="16"
                        FontAttributes="Bold" />
            </StackLayout>
            
            <!-- Validation Message -->
            <Label Text="{Binding ValidationMessage}" 
                   FontSize="12"
                   IsVisible="{Binding HasValidationError}"
                   HorizontalTextAlignment="Center"
                   TextColor="Red"
                   Margin="0,10,0,0" />
                   
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
