<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:loc="clr-namespace:Foodbook.Localization"
             xmlns:models="clr-namespace:Foodbook.Models"
             xmlns:vm="clr-namespace:Foodbook.ViewModels"
             xmlns:converters="clr-namespace:Foodbook.Converters"
             x:Class="Foodbook.Views.AddRecipePage"
             x:Name="ThisPage"
             x:DataType="vm:AddRecipeViewModel"
             Title="{Binding Title}">
    <ContentPage.Resources>
        <converters:InvertedBoolConverter x:Key="InvertedBoolConverter" />
        <converters:BoolToColorConverter x:Key="BoolToColorConverter" />
        <converters:StringToBoolConverter x:Key="StringToBoolConverter" />
    </ContentPage.Resources>
    
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <!-- Header -->
            <Label Text="{Binding Title}"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   Margin="0,0,0,10" />

            <!-- Mode Selection Section -->
            <StackLayout Spacing="10">
                <Label Text="{local:Translate 'Sposób dodawania przepisu'}" 
                       FontSize="18" 
                       FontAttributes="Bold" />
                
                <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                    <Button Grid.Column="0"
                            Text="{local:Translate '✏️ Ręcznie'}"
                            Command="{Binding SetManualModeCommand}"
                            BackgroundColor="{Binding IsManualMode, Converter={StaticResource BoolToColorConverter}}"
                            TextColor="White"
                            HeightRequest="45" />
                    <Button Grid.Column="1"
                            Text="{local:Translate '🌐 Z linku'}"
                            Command="{Binding SetImportModeCommand}"
                            BackgroundColor="{Binding IsImportMode, Converter={StaticResource BoolToColorConverter}}"
                            TextColor="White"
                            HeightRequest="45" />
                </Grid>
            </StackLayout>

            <!-- Import Section -->
            <StackLayout IsVisible="{Binding IsImportMode}" Spacing="10">
                <Label Text="{local:Translate 'Import z internetu'}" 
                       FontSize="18" 
                       FontAttributes="Bold" 
                       Margin="0,10,0,5" />
                
                <StackLayout Spacing="5">
                    <Label Text="{local:Translate 'URL przepisu *'}" FontAttributes="Bold" />
                    <Entry Placeholder="{local:Translate 'Wklej link do przepisu'}" 
                           Text="{Binding ImportUrl}" 
                           ClearButtonVisibility="WhileEditing"
                           Keyboard="Url" />
                </StackLayout>
                
                <Button Text="{local:Translate '🔄 Importuj przepis'}" 
                        Command="{Binding ImportRecipeCommand}"
                        HeightRequest="45" />
                
                <Label Text="{Binding ImportStatus}" 
                       FontSize="12" 
                       HorizontalTextAlignment="Center"
                       IsVisible="{Binding ImportStatus, Converter={StaticResource StringToBoolConverter}}" />
            </StackLayout>

            <!-- Manual Entry Section -->
            <StackLayout IsVisible="{Binding IsManualMode}" Spacing="10">
                
                <!-- Basic Information -->
                <Label Text="{local:Translate 'Informacje podstawowe'}" 
                       FontSize="18" 
                       FontAttributes="Bold" 
                       Margin="0,10,0,5" />
                
                <StackLayout Spacing="5">
                    <Label Text="{local:Translate 'Nazwa przepisu *'}" FontAttributes="Bold" />
                    <Entry Placeholder="{local:Translate 'Wprowadź nazwę przepisu'}" 
                           Text="{Binding Name}" 
                           ClearButtonVisibility="WhileEditing" />
                </StackLayout>
                
                <StackLayout Spacing="5">
                    <Label Text="{local:Translate 'Opis'}" FontAttributes="Bold" />
                    <Editor Placeholder="{local:Translate 'Wprowadź opis przepisu'}" 
                            Text="{Binding Description}" 
                            AutoSize="TextChanges"
                            HeightRequest="80" />
                </StackLayout>

                <StackLayout Spacing="5">
                    <Label Text="{local:Translate 'Domyślna ilość porcji (lista zakupów)*'}" FontAttributes="Bold" />
                    <Entry Placeholder="{local:Translate '2'}" 
                           Keyboard="Numeric"
                           Text="{Binding IloscPorcji}" 
                           ClearButtonVisibility="WhileEditing"
                           HorizontalTextAlignment="Center"
                           WidthRequest="80"
                           HorizontalOptions="Start" />
                </StackLayout>

                <!-- Ingredients Section - MOVED UP -->
                <Label Text="{local:Translate 'Składniki'}" 
                       FontSize="18" 
                       FontAttributes="Bold" 
                       Margin="0,15,0,5" />
                
                <CollectionView ItemsSource="{Binding Ingredients}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="models:Ingredient">
                            <Border Stroke="LightGray"
                                    StrokeThickness="1"
                                    Padding="10"
                                    Margin="0,0,0,8"
                                    BackgroundColor="{AppThemeBinding Light=White, Dark=#2D2D30}">
                                <Grid ColumnDefinitions="2*,*,Auto,Auto"
                                      ColumnSpacing="8"
                                      RowDefinitions="Auto,Auto"
                                      RowSpacing="8">
                                    
                                    <!-- Nazwa składnika -->
                                    <StackLayout Grid.Row="0" Grid.Column="0" Spacing="3">
                                        <Label Text="{local:Translate 'Składnik'}" FontSize="12" FontAttributes="Bold" />
                                        <Picker Title="{local:Translate 'Wybierz składnik'}"
                                                ItemsSource="{Binding BindingContext.AvailableIngredientNames, Source={x:Reference ThisPage}}"
                                                SelectedItem="{Binding Name}" />
                                    </StackLayout>
                                    
                                    <!-- Ilość -->
                                    <StackLayout Grid.Row="0" Grid.Column="1" Spacing="3">
                                        <Label Text="{local:Translate 'Ilość'}" FontSize="12" FontAttributes="Bold" />
                                        <Entry Placeholder="{local:Translate '1.0'}"
                                               Keyboard="Numeric"
                                               Text="{Binding Quantity}"
                                               HorizontalTextAlignment="Center"
                                               TextChanged="OnIngredientValueChanged" />
                                    </StackLayout>
                                    
                                    <!-- Jednostka -->
                                    <StackLayout Grid.Row="0" Grid.Column="2" Spacing="3">
                                        <Label Text="{local:Translate 'Jednostka'}" FontSize="12" FontAttributes="Bold" />
                                        <Picker Title="{local:Translate 'Jednostka'}"
                                                ItemsSource="{Binding BindingContext.Units, Source={x:Reference ThisPage}}"
                                                SelectedItem="{Binding Unit}"
                                                SelectedIndexChanged="OnIngredientValueChanged"
                                                WidthRequest="90" />
                                    </StackLayout>
                                    
                                    <!-- Przycisk usuń -->
                                    <Button Grid.Row="0" Grid.Column="3"
                                            Text="{local:Translate '🗑'}"
                                            Command="{Binding BindingContext.RemoveIngredientCommand, Source={x:Reference ThisPage}}"
                                            CommandParameter="{Binding .}"
                                            WidthRequest="40"
                                            HeightRequest="40"
                                            BackgroundColor="Red"
                                            TextColor="White"
                                            FontSize="16"
                                            CornerRadius="6"
                                            VerticalOptions="End" />

                                    <!-- Wartości odżywcze składnika (opcjonalne wyświetlanie) -->
                                    <StackLayout Grid.Row="1" Grid.ColumnSpan="4" 
                                                 Orientation="Horizontal" 
                                                 Spacing="15"
                                                 Margin="0,5,0,0">
                                        <Label Text="{Binding Calories, StringFormat='⚡ {0:F1} kcal'}" 
                                               FontSize="11" 
                                               TextColor="Gray" />
                                        <Label Text="{Binding Protein, StringFormat='🥩 {0:F1}g'}" 
                                               FontSize="11" 
                                               TextColor="Gray" />
                                        <Label Text="{Binding Fat, StringFormat='🧈 {0:F1}g'}" 
                                               FontSize="11" 
                                               TextColor="Gray" />
                                        <Label Text="{Binding Carbs, StringFormat='🌾 {0:F1}g'}" 
                                               FontSize="11" 
                                               TextColor="Gray" />
                                    </StackLayout>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
                
                <Button Text="{local:Translate '➕ Dodaj składnik'}" 
                        Command="{Binding AddIngredientCommand}"
                        HeightRequest="45" />

                <!-- Nutritional Information - MOVED DOWN -->
                <Label Text="{local:Translate 'Wartości odżywcze (na całą porcję)'}" 
                       FontSize="18" 
                       FontAttributes="Bold" 
                       Margin="0,20,0,5" />

                <!-- Calculation Mode Toggle -->
                <StackLayout Spacing="10">
                    <Label Text="{local:Translate 'Sposób obliczania wartości odżywczych'}" 
                           FontSize="14" 
                           FontAttributes="Bold" />
                    
                    <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                        <Button Grid.Column="0"
                                Text="{local:Translate '🧮 Automatycznie'}"
                                BackgroundColor="{Binding UseCalculatedValues, Converter={StaticResource BoolToColorConverter}}"
                                TextColor="White"
                                HeightRequest="40"
                                Clicked="OnAutoModeClicked" />
                        <Button Grid.Column="1"
                                Text="{local:Translate '✏️ Ręcznie'}"
                                BackgroundColor="{Binding UseManualValues, Converter={StaticResource BoolToColorConverter}}"
                                TextColor="White"
                                HeightRequest="40"
                                Clicked="OnManualModeClicked" />
                    </Grid>
                </StackLayout>

                <!-- Calculated Values Display -->
                <StackLayout IsVisible="{Binding UseCalculatedValues}" Spacing="10">
                    <Label Text="{local:Translate 'Obliczone automatycznie na podstawie składników:'}" 
                           FontSize="12" 
                           FontAttributes="Italic"
                           HorizontalTextAlignment="Center" />
                    
                    <Grid ColumnDefinitions="*,*" ColumnSpacing="10" RowDefinitions="Auto,Auto" RowSpacing="10">
                        <StackLayout Grid.Row="0" Grid.Column="0" Spacing="5">
                            <Label Text="{local:Translate 'Kalorie'}" FontAttributes="Bold" />
                            <Label Text="{Binding CalculatedCalories}" 
                                   FontSize="16"
                                   HorizontalTextAlignment="Center"
                                   BackgroundColor="LightGray"
                                   Padding="10"
                                   TextColor="Black" />
                        </StackLayout>
                        
                        <StackLayout Grid.Row="0" Grid.Column="1" Spacing="5">
                            <Label Text="{local:Translate 'Białko (g)'}" FontAttributes="Bold" />
                            <Label Text="{Binding CalculatedProtein}" 
                                   FontSize="16"
                                   HorizontalTextAlignment="Center"
                                   BackgroundColor="LightGray"
                                   Padding="10"
                                   TextColor="Black" />
                        </StackLayout>
                        
                        <StackLayout Grid.Row="1" Grid.Column="0" Spacing="5">
                            <Label Text="{local:Translate 'Tłuszcze (g)'}" FontAttributes="Bold" />
                            <Label Text="{Binding CalculatedFat}" 
                                   FontSize="16"
                                   HorizontalTextAlignment="Center"
                                   BackgroundColor="LightGray"
                                   Padding="10"
                                   TextColor="Black" />
                        </StackLayout>
                        
                        <StackLayout Grid.Row="1" Grid.Column="1" Spacing="5">
                            <Label Text="{local:Translate 'Węglowodany (g)'}" FontAttributes="Bold" />
                            <Label Text="{Binding CalculatedCarbs}" 
                                   FontSize="16"
                                   HorizontalTextAlignment="Center"
                                   BackgroundColor="LightGray"
                                   Padding="10"
                                   TextColor="Black" />
                        </StackLayout>
                    </Grid>
                </StackLayout>

                <!-- Manual Values Input -->
                <StackLayout IsVisible="{Binding UseManualValues}" Spacing="10">
                    <Grid ColumnDefinitions="*,Auto" ColumnSpacing="10">
                        <Label Grid.Column="0"
                               Text="{local:Translate 'Wprowadź wartości ręcznie:'}" 
                               FontSize="12" 
                               FontAttributes="Italic"
                               VerticalOptions="Center" />
                        <Button Grid.Column="1"
                                Text="{local:Translate '📋 Skopiuj obliczone'}"
                                Command="{Binding CopyCalculatedValuesCommand}"
                                FontSize="12"
                                HeightRequest="30" />
                    </Grid>
                    
                    <Grid ColumnDefinitions="*,*" ColumnSpacing="10" RowDefinitions="Auto,Auto" RowSpacing="10">
                        <StackLayout Grid.Row="0" Grid.Column="0" Spacing="5">
                            <Label Text="{local:Translate 'Kalorie'}" FontAttributes="Bold" />
                            <Entry Placeholder="{local:Translate '0.0'}" 
                                   Keyboard="Numeric" 
                                   Text="{Binding Calories}"
                                   ClearButtonVisibility="WhileEditing" />
                        </StackLayout>
                        
                        <StackLayout Grid.Row="0" Grid.Column="1" Spacing="5">
                            <Label Text="{local:Translate 'Białko (g)'}" FontAttributes="Bold" />
                            <Entry Placeholder="{local:Translate '0.0'}" 
                                   Keyboard="Numeric" 
                                   Text="{Binding Protein}"
                                   ClearButtonVisibility="WhileEditing" />
                        </StackLayout>
                        
                        <StackLayout Grid.Row="1" Grid.Column="0" Spacing="5">
                            <Label Text="{local:Translate 'Tłuszcze (g)'}" FontAttributes="Bold" />
                            <Entry Placeholder="{local:Translate '0.0'}" 
                                   Keyboard="Numeric" 
                                   Text="{Binding Fat}"
                                   ClearButtonVisibility="WhileEditing" />
                        </StackLayout>
                        
                        <StackLayout Grid.Row="1" Grid.Column="1" Spacing="5">
                            <Label Text="{local:Translate 'Węglowodany (g)'}" FontAttributes="Bold" />
                            <Entry Placeholder="{local:Translate '0.0'}" 
                                   Keyboard="Numeric" 
                                   Text="{Binding Carbs}"
                                   ClearButtonVisibility="WhileEditing" />
                        </StackLayout>
                    </Grid>
                </StackLayout>
            </StackLayout>

            <!-- Action Buttons -->
            <StackLayout Spacing="10" Margin="0,20,0,0">
                <Button Text="{Binding SaveButtonText}"
                        Command="{Binding SaveRecipeCommand}"
                        HeightRequest="50"
                        FontSize="16"
                        FontAttributes="Bold" />
            </StackLayout>

            <!-- Validation Message -->
            <Label Text="{Binding ValidationMessage}"
                   FontSize="12"
                   IsVisible="{Binding HasValidationError}"
                   HorizontalTextAlignment="Center"
                   TextColor="Red"
                   Margin="0,10,0,0" />
                   
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
