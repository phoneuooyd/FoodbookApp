<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:Foodbook.Models"
             x:Class="Foodbook.Views.AddRecipePage"
             x:Name="ThisPage"
             Title="Dodaj przepis">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="16">

            <!-- Header -->
            <Label Text="{Binding Title}"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   Margin="0,0,0,20" />

            <HorizontalStackLayout>
                <Button Text="Recznie"
                        Command="{Binding SetManualModeCommand}" />
                <Button Text="Z linku"
                        Command="{Binding SetImportModeCommand}" />
            </HorizontalStackLayout>

            <!-- Tryb importu -->
            <StackLayout IsVisible="{Binding IsImportMode}">
                <Entry Placeholder="Wklej link do przepisu" Text="{Binding ImportUrl}" />
                <Button Text="Importuj przepis" Command="{Binding ImportRecipeCommand}" />
                <Label Text="{Binding ImportStatus}" TextColor="Gray" FontSize="12" />
            </StackLayout>

            <!-- Tryb reczny -->    
            <StackLayout IsVisible="{Binding IsManualMode}">
                <Entry Placeholder="Nazwa przepisu" Text="{Binding Name}" />
                <Editor Placeholder="Opis" Text="{Binding Description}" AutoSize="TextChanges" />
                <Entry Placeholder="Kalorie" Keyboard="Numeric" Text="{Binding Calories}" />
                <Entry Placeholder="Bialko" Keyboard="Numeric" Text="{Binding Protein}" />
                <Entry Placeholder="Tluszcze" Keyboard="Numeric" Text="{Binding Fat}" />
                <Entry Placeholder="Weglowodany" Keyboard="Numeric" Text="{Binding Carbs}" />

                <Label Text="Skladniki:" FontAttributes="Bold" />
                <CollectionView ItemsSource="{Binding Ingredients}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Border StrokeThickness="1"
                                    Stroke="LightGray"
                                    Padding="10"
                                    Margin="0,0,0,8">
                                <Grid ColumnDefinitions="2*,*,Auto,Auto"
                                      ColumnSpacing="10"
                                      VerticalOptions="Center">
                                    <Picker Title="Składnik"
                                            ItemsSource="{Binding BindingContext.AvailableIngredientNames, Source={x:Reference ThisPage}}"
                                            SelectedItem="{Binding Name}" />
                                    <Entry Grid.Column="1"
                                           Placeholder="Ilość"
                                           Keyboard="Numeric"
                                           Text="{Binding Quantity}" />
                                    <Picker Grid.Column="2"
                                            Title="Jednostka"
                                            ItemsSource="{Binding BindingContext.Units, Source={x:Reference ThisPage}}"
                                            SelectedItem="{Binding Unit}" />
                                    <Button Grid.Column="3"
                                            Text="Usuń"
                                            Command="{Binding BindingContext.RemoveIngredientCommand, Source={x:Reference ThisPage}}"
                                            CommandParameter="{Binding .}" />
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
                <Button Text="Dodaj skladnik" Command="{Binding AddIngredientCommand}" />
            </StackLayout>

            <!-- Action Buttons -->
            <StackLayout Spacing="10" Margin="0,20,0,0">
                <Button Text="{Binding SaveButtonText}"
                        Command="{Binding SaveRecipeCommand}"
                        HeightRequest="50" />

                <Button Text="Anuluj"
                        Command="{Binding CancelCommand}"
                        HeightRequest="50" />
            </StackLayout>

            <!-- Validation Message -->
            <Label Text="{Binding ValidationMessage}"
                   FontSize="12"
                   IsVisible="{Binding HasValidationError}"
                   HorizontalTextAlignment="Center" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
